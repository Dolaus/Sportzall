@model IEnumerable<Abonement>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Всі абонементи</h2>
        </div>
    </div>
    <br /><br />

    @if (Model.Count()>0)
    {
        <table class="table table-dark table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Назва абонементу
                    </th>
                    <th>
                        Ціна
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.Price
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                 <a asp-controller="Abonement" asp-route-Id="@obj.Id"  asp-action="Buy" class=" btn btn-warning mx-2">
                                 Додати у корзину
                                 </a>
                                 
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> Немає абонементів </p>
    }
</div>