@model Sportzall.Models.ViewModel.LoginViewModel
 

<h2 class="login-text">Sign in</h2>
<main class="main">
<div class="login-container">
        <form asp-action="Login" asp-controller="Account" class="form" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
     
                <div class="form-field">
                    <label asp-for="Email" class="form-label">Введите Email</label>
                <input type="text" class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-field">
                    <label asp-for="Password" class="form-label">Введите пароль</label>
                <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-btn-container">
                    <input type="submit" value="Войти" class="button form-button" />
                </div>
        
        </form>
</div>
</main>