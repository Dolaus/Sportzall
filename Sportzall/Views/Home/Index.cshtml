@model IEnumerable<User>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="User" asp-action="Create" class=" btn btn-primary">
            Create New User
            </a>
        </div>
    </div>
    <br /><br />
    <div class="row">
    @if (Model.Count()>0)
    {
        

                @foreach(var obj in Model)
                {
                   <div class="col-lg-4 col-md-6 pb-4 filter @obj.Name.Replace(' ','_')">
 
              <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
                <div>
                   <img class="card-img-top img-fluid d-block mx-auto mb-3" width="100%" src="@URL.ImageUserURL@obj.Image" alt="Card image cap">
                </div>
                <div class="card-body p-1 px-3 row">
                    <div class="col-7"><h4 class="float-left">@obj.Name</h4></div>
                <div class="col-12 pt-2" style="font-size:13px; text-align:justify" >
                    <h4>@obj.Year</h4>
                    <p>@obj.ShortInfo</p>
                </div>
                <div class="col-12 p-1">
                    <a asp-controller="User" asp-action="Details" asp-route-id="@obj.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
                </div>
                </div>
            </div>
        </div>
                }

    }
    else
    {
        <p> No Users </p>
    }
    </div>
</div>
