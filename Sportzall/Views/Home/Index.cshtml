@model IEnumerable<User>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="User" asp-action="Create" class=" btn btn-primary">
            Create New User
            </a>
        </div>
    </div>
    <br /><br />

    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        User Name
                    </th>
                    <th>
                        Role
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.Role.Name
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                 <a asp-controller="User" asp-action="Edit" class=" btn btn-primary">
                                 Edit
                                 </a>
                                 <a asp-controller="User" asp-action="Delete" class=" btn btn-primary">
                                 Delete
                                 </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Users </p>
    }
</div>
