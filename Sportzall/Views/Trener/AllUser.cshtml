@model IEnumerable<User>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-light">Всі користувачі</h2>
        </div>
    </div>
    <br /><br />

    @if (Model.Count()>0)
    {
        <table class="table table-dark table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Ім'я користувача
                    </th>
                    <th>
                        Рік народження
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="User" asp-route-Id="@obj.Id" asp-action="Details" >
                                @obj.Name
                            </a>
                        </td>
                        <td>
                            @obj.Year
                        </td>
                        <td class="text-center">
                            <a asp-controller="Trener" asp-route-Id="@obj.Id" asp-action="AddUserToTeam" class="btn btn-warning">
                                 Додати до команди
                                 </a>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Немає користувачів </p>
    }
</div>