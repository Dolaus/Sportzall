@model Sportzall.Models.User
@{
    ViewData["Title"] = "Details";
}

<h1>Деталі</h1>

<div>
    <h4>Користувач</h4>

    </hr>
    @if (Model.Image == "" || Model.Image == null)
    {
        <div class="col-4">
            <img src="@URL.ImageUserURL@URL.Scala" width=" 100%" style="border-radius:5px; border:1px solid #bbb" />
        </div>
    }
    else
    {
        <div class="col-4">
            <img src="@URL.ImageUserURL@Model.Image" width=" 100%" style="border-radius:5px; border:1px solid #bbb" />
        </div>
    }
    <dl class="row">
        <dt class="col-sm-2">
            Ім'я
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Name)
        </dd>
        <dt class="col-sm-2">
            Рік народження
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Year)
        </dd>
        <dt class="col-sm-2">
            Коротка інформація
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.ShortInfo)
        </dd>
        <dt class="col-sm-2">
           Номер телефону
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.PhoneNumber)
        </dd>





    </dl>
    @if (Model.RoleId == 2)
    {
        
        <h4>Силові показники</h4>
        <table class="table table-dark table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Жим від грудей
                    </th>
                    <th>
                        Жим лежачи
                    </th>
                    <th>
                        Присід
                    </th>
                    <th>
                        Дата
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.StrangeUserRecord)
                {
                    <tr>
                        <td>
                            @obj.ChessPress
                        </td>
                        <td>
                            @obj.BenchPress
                        </td>
                        <td>
                            @obj.Squat
                        </td>
                        <td>
                            @obj.DateTimeDateTime
                        </td>
                    </tr>

                }
            </tbody>
        </table>
        <div class="w-100 btn-group" role="group">
            <a asp-controller="Trener" asp-route-Id="@Model.Id" asp-action="StrangeRecordCreate" class=" btn btn-warning ">
                Додати силові показники
            </a>
        </div>
    }
</div>

