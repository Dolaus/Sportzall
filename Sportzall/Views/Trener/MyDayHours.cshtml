@model IEnumerable<Hours>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Hours List</h2>
        </div>
    </div>
    <br /><br />

    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Abonement Name
                    </th>
                    <th>
                        IsBusy
                    </th>
                    <th>
                        IsActive
                    </th>
                    <th>
                        UserId
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @if (obj.IsBusy == false)
                            {

                                <a asp-controller="Trener" asp-route-Id="@obj.Id"  asp-action="ChangeStatus">
                                   Не зайнятий
                                </a>

                            }
                            else
                    @if (obj.IsBusy == true)
                            {

                                <a asp-controller="Trener" asp-route-Id="@obj.Id"  asp-action="ChangeStatus">
                                    Зайнятий
                                </a>

                            }
                        </td>
                         <td>
                            @obj.IsActive
                        </td>
                        @if (obj.UserId == null||obj.IsBusy==false)
                        {
                            <td>
                                @obj.UserId
                            </td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                 <a asp-controller="Trener" asp-route-Id="@obj.Id"  asp-action="MyUserHours" class=" btn btn-primary mx-2">
                                 Add
                                 </a>
                                 
                            </div>
                            </td>
                        }
                        else if (obj.UserId != null || obj.IsBusy == true)
                        {
                             <td>
                                @obj.UserId
                            </td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                 <a asp-controller="Trener" asp-route-Id="@obj.Id"  asp-action="DeleteUserHours" class=" btn btn-danger mx-2">
                                  Delete
                                 </a>
                                 
                            </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Users </p>
    }
</div>