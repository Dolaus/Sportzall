@model IEnumerable<Week>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-light">Список днів</h2>
        </div>
    </div>
    <br /><br />

    @if (Model.Count()>0)
    {
        <table class="table table-dark table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Назва дня
                    </th>
                 <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.NameofDay
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Trener" asp-route-Id="@obj.Id" asp-action="MyDayHours" class="btn btn-warning">
                                 Вибрати
                                 </a>
                                 
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> Ви не працюєте</p>
    }
</div>