@model Sportzall.Models.User
@{
    ViewData["Title"] = "Details";
}

<h1>Про користувача</h1>

<div>
    <h4>Інформація</h4>

    </hr>
    @if (Model.Image == "" || Model.Image == null)
    {
        <div class="col-4">
            <img src="@URL.ImageUserURL@URL.Scala" width=" 100%" style="border-radius:5px; border:1px solid #bbb" />
        </div>
    }
    else
    {
        <div class="col-4">
            <img src="@URL.ImageUserURL@Model.Image" width=" 100%" style="border-radius:5px; border:1px solid #bbb" />
        </div>
    }
    <dl class="row">
        <dt class="col-sm-2">
            Ім'я
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Name)
        </dd>
        <dt class="col-sm-2">
            Рік народження
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Year)
        </dd>
        <dt class="col-sm-2">
            Коротка інформація
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.ShortInfo)
        </dd>
        <dt class="col-sm-2">
            Номер телефону
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Жим від грудей
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.ChessPress)
        </dd>

        <dt class="col-sm-2">
            Жим лежачи
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.BenchPress)
        </dd>

        <dt class="col-sm-2">
            Присід
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Squat)
        </dd>
</div>
@if (Model.RoleId == 2 || Model.RoleId == 3)
{
    <div class="w-75 btn-group" role="group">
        <a asp-controller="User" asp-action="AddSomeInformationAboutUser">
            Добавити Інформацію
        </a>
    </div>
    <br />
    <br />
    @if (Model.RoleId == 2)
    {
        <div class="w-100 btn-group" role="group">
            <a asp-controller="User" asp-action="MyRecords" class=" btn btn-warning mx-2">
                Мої записи
            </a>
            <a asp-controller="User" asp-action="MyAbonements" class="btn btn-warning mx-2">
                Мої абонементи
            </a>
            <a asp-controller="User" asp-action="MyTreners" class="btn btn-warning mx-2">
                Мої тренери
            </a>
        </div>
    }
}
<h4>Силові показники</h4>
<table class="table table-dark table-hover" style="width:100%">
    <thead>
        <tr>
            <th>
                Жим від грудей
            </th>
            <th>
                Жим лежачи
            </th>
            <th>
                Присід
            </th>
            <th>
                Дата
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.StrangeUserRecord)
        {
            <tr>
                <td>
                    @obj.ChessPress
                </td>
                <td>
                    @obj.BenchPress
                </td>
                <td>
                    @obj.Squat
                </td>
                <td>
                    @obj.DateTimeDateTime
                </td>
            </tr>

        }
    </tbody>




