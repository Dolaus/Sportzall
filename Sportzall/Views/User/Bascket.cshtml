<h1>Корзина</h1>

@if (Model.AbonementsUser.Count > 0)
    {


        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Назва абонементу
                    </th>
                    <th>
                        Опис
                    </th>
                    <th>
                        Ціна
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.AbonementsUser)
                {
                    
                    
                if(obj.IsPay==false)
                {


                    <tr>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                             @obj.Description
                        </td>
                        <td>
                             @obj.Price
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                 <a asp-controller="User" asp-route-Id="@obj.Id" asp-action="Pay" class=" btn btn-primary mx-2">
                                 Оплатити
                                 </a>
                                
                            </div>
                        </td>
                    </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p>У вас немає абонементів</p>
    }