@model Sportzall.Models.ViewModel.CreateUserViewModel

<h1>Створити</h1>

<h4>Користувач</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ім'я</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Year" class="control-label">Рік народження</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label">Номер телефону</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShortInfo" class="control-label">Коротка інформація</label>
                <input asp-for="ShortInfo" class="form-control" />
                <span asp-validation-for="ShortInfo" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="BenchPress" class="control-label">Жим від грудей</label>
                <input asp-for="BenchPress" class="form-control" />
                <span asp-validation-for="BenchPress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChessPress" class="control-label">Жим лежачи</label>
                <input asp-for="ChessPress" class="form-control" />
                <span asp-validation-for="ChessPress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Squat" class="control-label">Присід</label>
                <input asp-for="Squat" class="form-control" />
                <span asp-validation-for="Squat" class="text-danger"></span>
            </div>

             <div class="form-group row">
                    <div class="col-4">
                       Фото
                    </div>
                    <div class="col-8">
                        <input type="file" name="fileimages" id="uploadBox" multiple class="form-control"/>
                    </div>
             </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися назад</a>
</div>
