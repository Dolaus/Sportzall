@model Sportzall.Models.User

<h1>Видалити</h1>

<h4>Користувач</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteConfirmed" method="post"  enctype="multipart/form-data">
            <input asp-for="Id" hidden/>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ім'я</label>
                <input asp-for="Name"disabled class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email"disabled class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Year" class="control-label">Рік народження</label>
                <input asp-for="Year"disabled class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"disabled class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Видалити" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися назад</a>
</div>
