@model IEnumerable<User>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-light ">User List</h2>
        </div>
        <div class="col-6 text-light">
            <a asp-controller="User" asp-action="Create" class=" btn btn-warning">
            Create New User
            </a>
        </div>
    </div>
    <br /><br />

    @if (Model.Count()>0)
    {

        <table class="table table-dark table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>
                        User Name
                    </th>
                    <th>
                        Role
                    </th>
                    <th>
                       
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="User" asp-route-Id="@obj.Id" asp-action="Details" >
                                @obj.Name
                            </a>
                        </td>
                        <td>
                            @obj.Role.Name
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                 <a asp-controller="User" asp-route-Id="@obj.Id" asp-action="Edit" class=" btn btn-warning mx-2">
                                 Edit
                                 </a>
                                 <a asp-controller="User"asp-route-Id="@obj.Id" asp-action="Delete" class=" btn btn-danger mx-2">
                                 Delete
                                 </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Users </p>
    }
</div>