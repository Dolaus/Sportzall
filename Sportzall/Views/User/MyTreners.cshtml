@model IEnumerable<TrenersUser>
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Your Treners</h4>
    
    </hr>
     <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                       Treners Name
                    </th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            <a >                         
                                @obj.User.Name
                            </a>

                        </td>
                        <td>

                        </td>
                        <td>
                           <div class="w-75 btn-group" role="group"> 
                                <a  asp-controller="User"   asp-action="SelectDayAddMyToRozklad" asp-route-trenersid="@obj.UserId" >                         
                                   Записатися
                                </a>
                            </div>
                        </td>
                        
                    </tr>
                }
            }
            else
            {
               <p>You dont have treners</p>
            }
                
            </tbody>
     </table>

        <br />
</div>


