@model IEnumerable<Week>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-light">Розклад тренера</h2>
        </div>

    </div>
    <br /><br />

    @if (Model.Count()>0)
    {
        <table class="table table-dark table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Назва дня
                    </th>
                 
                    <th>
                        
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.NameofDay
                        </td>
                       
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                 <a asp-controller="User" asp-route-trenersid="@obj.Id"  asp-action="SelectHourOfDayAddMeToRozklad" class=" btn btn-warning mx-2">
                                      Вибрати
                                 </a>
                                 
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Users </p>
    }
</div>